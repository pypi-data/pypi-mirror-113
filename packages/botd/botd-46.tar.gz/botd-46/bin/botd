#!/usr/bin/env python3
# This file is placed in the Public Domain.

"24/7 channel daemon"

__version__ = 46

import os, sys

import atexit
import bot.all
import ob
import os
import sys
import termios
import trm

name = "botd"
ob.wd = "/var/lib/botd"

from ob import Restart, Handler, Kernel, launch

class MyKernel(Kernel):
    def error(self, e):
        trm.cprint(e.exc)
        raise Restart

k = MyKernel()
k.cfg.p = "bot"
k.cfg.m = "bot.irc"

class CLI(Handler):
    def error(self, e):
        trm.cprint(e.exc)
        raise Restart

    def handle(self, e):
        k.put(e)
        e.wait()

    def raw(self, txt):
        trm.cprint(txt)

def ver(event):
    event.reply("BOTD %s" % __version__)

def main():
    k.parse_cli(disk=True)
    k.boot()
    k.add(ver)
    if k.opts("d"):
        daemon()
    k.privileges()
    k.start()
    k.wait()


trm.wrap(main)
